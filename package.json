{
  "name": "context-bundler",
  "displayName": "Context Bundler",
  "description": "Easily bundle files for LLM context windows.",
  "version": "0.0.1",
  "publisher": "codex",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Context Bundler",
      "properties": {
        "contextBundler.showIgnoredNodes": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show ignored files and folders in the tree view. When enabled, ignored items will be displayed but greyed out."
        },
        "contextBundler.systemPrompt": {
          "type": "string",
          "default": "",
          "description": "A system prompt prepended to every request when using Copy to Clipboard with Prompt. Helps guide the LLM on how to interpret the request."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "contextBundlerView",
          "name": "Context Bundler",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "context-bundler.copyToClipboard",
        "title": "CopyCat: Copy Selected Files to Clipboard",
        "icon": "$(clippy)"
      },
      {
        "command": "context-bundler.copyToClipboardWithPrompt",
        "title": "CopyCat: Copy Selected Files to Clipboard with Prompt",
        "icon": "$(comment)"
      },
      {
        "command": "context-bundler.toggleNode",
        "title": "Toggle Node"
      },
      {
        "command": "context-bundler.debugSettings",
        "title": "Debug Context Bundler Settings"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "context-bundler.copyToClipboard",
          "when": "view == contextBundlerView",
          "group": "navigation"
        },
        {
          "command": "context-bundler.copyToClipboardWithPrompt",
          "when": "view == contextBundlerView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.19",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "mocha": "^11.7.1",
    "sinon": "^21.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "ignore": "^5.3.1"
  }
}